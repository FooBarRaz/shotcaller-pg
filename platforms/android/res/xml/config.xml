<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.shotcaller" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="FacebookConnectPlugin">
        <param name="android-package" value="org.apache.cordova.facebook.ConnectPlugin" />
    </feature>
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="https://*.fbcdn.net" />
    <access origin="https://*.akamaihd.net" />
    <feature name="PushPlugin">
        <param name="android-package" value="com.plugin.gcm.PushPlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <splash density="port" src="res/splash-port.png" />
    <splash density="land" src="res/splash-land.png" />
    <name>Shotcaller</name>
    <description>
    An app that allows you to connect with friends and strangers over
    a beverage
  </description>
    <author email="admin@shotcaller-app.com" href="http://www.shotcaller-app.com">
    Shotcaller Team
  </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="res/logo.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
</widget>
